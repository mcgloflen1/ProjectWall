<h3>Add a college</h3>

<%= form_for @college do |f| %>
	<div class="form-group">
		<label>Name</label>
		<%= f.text_field :name, placeholder: "college name", class: "form-control" %>
	</div>

	<div class="form-group">
		<label>City</label>
		<%= f.text_field :city, placeholder: "college city", class: "form-control" %>
	</div>

	<div class="row">
		<div class="col-sm-6">
			<div class="form-group">
				<label>State</label>
				<%= f.text_field :state, placeholder: "college state", class: "form-control" %>
			</div>
		</div>
		<div class="col-sm-6">
			<div class="form-group">
				<label>Country</label>
				<%= f.text_field :country, placeholder: "college country", class: "form-control" %>
			</div>
		</div>
	</div>

	<p>Note: this college will be submitted to admin before being added to the site (usually completed within 24 hours).</p>

	<%= f.hidden_field :college_approval, value: false %>
	<%= f.hidden_field :created_by, value: current_user.id %>

	<%= f.submit "Submit", class: "btn btn-primary" %>
	<%= link_to "Cancel", :back %>

<% end %>