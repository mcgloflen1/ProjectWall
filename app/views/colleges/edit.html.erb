<% if current_user.admin? %>

<h3>Edit College</h3>

<%= form_for @college, method: "PUT" do |f| %>

<div class="form-group">
	<label>Name</label>
	<%= f.text_field :name, placeholder: @college.name, class: "form-control" %>
</div>

<div class="form-group">
	<label>City</label>
	<%= f.text_field :city, placeholder: @college.city, class: "form-control" %>
</div>

<div class="row">
	<div class="col-sm-6">
		<div class="form-group">
			<label>State</label>
			<%= f.text_field :state, placeholder: @college.state, class: "form-control" %>
		</div>
	</div>
	<div class="col-sm-6">
		<div class="form-group">
			<label>Country</label>
			<%= f.text_field :country, placeholder: @college.country, class: "form-control" %>
		</div>
	</div>
</div>

<%= f.submit "Update", class: "btn btn-primary" %>
<%= link_to "Cancel", :back %>

<% end %>
<% end %>